  <section id="finanzen" class="section bg-white"><div class="container"><h2 class="mb-3">Finanzierung & Rendite</h2>
    <div class="row g-3">
      <div class="col-lg-6"><div class="card p-3">
        <h5>Hypotheken-Rechner</h5>
        <div class="row g-2">
          <div class="col"><label class="form-label">Kreditsumme (€)</label><input id="loan" class="form-control" type="number" value="350000"></div>
          <div class="col"><label class="form-label">Zins p. a. (%)</label><input id="rate" class="form-control" type="number" value="3.8" step=".01"></div>
          <div class="col"><label class="form-label">Laufzeit (J)</label><input id="years" class="form-control" type="number" value="25"></div>
        </div>
        <button class="btn btn-primary mt-2" onclick="calcAnn()">Berechnen</button>
        <div id="annOut" class="mt-3"></div>
      </div></div>
