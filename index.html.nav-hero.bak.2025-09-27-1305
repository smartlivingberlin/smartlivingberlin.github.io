  <!-- Modal für Baukasten -->
  <div class="modal fade" id="featureModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
      <div class="modal-content">
        <div class="modal-header"><h5 id="featureTitle" class="modal-title">Thema</h5>
          <button class="btn btn-close" data-bs-dismiss="modal" aria-label="Schließen"></button></div>
        <div id="featureBody" class="modal-body"></div>
        <div class="modal-footer">
          <a id="featureLink" class="btn btn-success" target="_blank" rel="noopener">Mehr</a>
          <button class="btn btn-outline-secondary" data-bs-dismiss="modal">Schließen</button>
        </div>
      </div>
    </div>
